<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.aradtour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_arad"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MonumentsActivity"
            android:label="@string/MonumentsCategory"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MuseumsActivity"
            android:label="@string/MuseumsCategory"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/RestaurantsCategory"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".HotelsActivity"
            android:label="@string/HotelsCategory"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>